<% include ../partials/header %>

<div class="new-container">
  <div class="new-wall">
    <h4>Add a vinyl to your collection</h4>
    <form action="/collection/new" method="POST">
      <div class="form-group">
        <input type="text" name="title" id="title" required>
        <label for="title">Title</label>
      </div>
      <div class="form-group">
        <input type="text" name="artist" id="artist" required>
        <label for="artist">Artist</label>
      </div>
      <div class="form-group">
        <select name="country" id="country" required>
          <option>UK</option>
          <option>Europe</option>
          <option>UK/Europe</option>
          <option>US</option>
        </select>
        <label for="country">Country</label>
      </div>

      <div class="form-group">
        <select name="condition" id="condition" required>
          <option>M - Mint</option>
          <option>NM - Near Mint</option>
          <option>VG+ - Very Good Plus</option>
          <option>VG - Very Good</option>
          <option>G - Good</option>
          <option>P - Poor</option>
        </select>
        <label for="condition">Condition</label>
      </div>

      <input type="submit" value="Submit">
    </form>
  </div>
</div>


</div>
</body>

</html>