<% include ../partials/header %>
<% include ../partials/notification %>

  <div class="edit-container">
    <div class="edit-wall">
      <h3>Edit</h3>
      <h4><%=vinyl.artist %> - <%= vinyl.title %></h4>

      <form action="/collection/<%= vinyl._id %>?_method=PUT" method="POST">
          <div class="form-group">
            <input type="text" name="vinyl[title]" value="<%= vinyl.title %>">
            <label for="title">Title</label>
        </div>
        <div class="form-group">
            <input type="text" name="vinyl[artist]" value="<%= vinyl.artist %>">
          <label for="artist">Artist</label>
        </div>
        <div class="form-group">
            <select name="vinyl[country]" id="country" required>
            <option>UK</option>
            <option>Europe</option>
            <option>UK/Europe</option>
            <option>US</option>
          </select>
          <label for="country">Country</label>
        </div>

        <div class="form-group">
            <select name="vinyl[condition]" id="condition">
            <option>M - Mint</option>
            <option>NM - Near Mint</option>
            <option>VG+ - Very Good Plus</option>
            <option>VG - Very Good</option>
            <option>G - Good</option>
            <option>P - Poor</option>
          </select>
          <label for="condition">Title</label>
        </div>

        <input type="submit" value="Submit">

      </form>
    </div>

  </div>
</body>

</html>

